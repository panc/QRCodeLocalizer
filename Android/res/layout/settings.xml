<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundColor"
    >
    
    <LinearLayout android:layout_margin="5dip"
        android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
    	
	    <TextView android:id="@+id/addressSettingsHeadline"
	        android:text="@string/addressSettings"
	        android:textColor="@color/headlineColor"
	        android:textSize="20sp"
	        android:layout_marginTop="5dip"
	        android:layout_marginLeft="3dip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    
	    <View android:background="@color/headlineColor" 
	        android:layout_width = "fill_parent" 
	        android:layout_height="1dip"
	        android:layout_marginBottom="10dip" />
		
	    <TextView android:id="@+id/qrazUrlTextView"
		    android:textColor="@color/textColor"
		    android:paddingLeft="1dip"
	    	android:layout_marginLeft="5dip"
	        android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:text="@string/qrazUrlHint" />
    
	    <EditText android:id="@+id/qrazUrl"
	        android:hint="@string/qrazUrlHint"
	        android:inputType="textUri"
	        android:layout_marginLeft="3dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <TextView android:id="@+id/updateUrlTextView"
		    android:textColor="@color/textColor"
		    android:layout_marginLeft="5dip"
	        android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:text="@string/apiUrlHint" />
    	
    	<EditText android:id="@+id/updateUrl"
	        android:hint="@string/apiUrlHint"
	        android:inputType="textUri"
	        android:layout_marginLeft="3dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    
	    <TextView android:id="@+id/userSettingsHeadline"
	        android:text="@string/userSettings"
	        android:textColor="@color/headlineColor"
	        android:textSize="20sp"
	        android:layout_marginTop="15dip"
	        android:layout_marginLeft="3dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	    
	    <View android:background="@color/headlineColor" 
	        android:layout_width = "fill_parent" 
	        android:layout_height="1dip"
	        android:layout_marginBottom="15dip"/>
	    
		<EditText android:id="@+id/userName"
	        android:hint="@string/userNameHint"
	        android:inputType="textPersonName"
	        android:layout_marginLeft="3dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
	     
		<EditText android:id="@+id/password"
	        android:hint="@string/passwordHint"
	        android:inputType="textPassword"
	        android:layout_marginLeft="3dip"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>	
		    
	</LinearLayout>
	
</ScrollView>
