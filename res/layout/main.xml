<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >
	
	<TextView android:id="@+id/qrCodeInfoHeadline"
        android:text="@string/clCaptionText"
        android:textColor="#4E95D4"
        android:textSize="20sp"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <View android:background="#4E95D4" 
        android:layout_width = "fill_parent" 
        android:layout_height="1dip"
        android:layout_marginBottom="15dip"/>
    
    <Button
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/initiateScanButtonText"
	    android:paddingTop="2sp"
	    android:paddingBottom="2sp"
	    android:paddingLeft="5sp"
	    android:onClick="initiateScanButtonClick" />
    
    <TextView  
	    android:id="@+id/resultTextView"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" />
    
    <TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/codeLocationView"/>
    
    <TextView android:id="@+id/locationHeadline"
        android:text="@string/locationCaptionText"
        android:textColor="#4E95D4"
        android:textSize="20sp"
        android:layout_marginTop="15dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <View android:background="#4E95D4" 
        android:layout_width = "fill_parent" 
        android:layout_height="1dip"
        android:layout_marginBottom="15dip"/>
    
    <TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/locationView" />
    
     <Button
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/sendDataButtonText"
	    android:onClick="sendDataButtonClick" />
    
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/infoView" />
</LinearLayout>
